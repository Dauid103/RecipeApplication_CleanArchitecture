<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark navbar-expand-sm" style="background-color: #75863e !important">
            <a asp-controller="Recipe" asp-action="Index"><h2 class="navbar-brand"><i class="fa fa-cutlery"></i> &nbsp; Receptplanering</h2></a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recipe" asp-action="Index">Recept</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ShopList" asp-action="Index">Inköpslistor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">Om</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logga ut</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Logga in</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        @RenderBody()
    </section>
    <br />
    <footer class="container">
        <div class="text-center">Copyright @DateTime.Now.ToString("yyyy") Recipe Application</div>
    </footer>
    <br />
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("scripts", false)
</body>
</html>