@model RecipeViewModel

@{
    ViewBag.Title = "Create";
}

@section Scripts {

    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}


<br />
    <h2>Nytt Recept</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureId" class="control-label"></label>
                <input asp-for="PictureId" class="form-control" placeholder="600x450" />
                <span asp-validation-for="PictureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategory" class="control-label"></label>
                <select asp-for="RecipeCategory.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-outline-dark" />
            </div>
        </form>
        <hr />
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark">Tillbaka till lista</a>
</div>
