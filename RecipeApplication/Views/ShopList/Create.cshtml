@model ShopListViewModel

@{
    ViewBag.Title = "Create";
}

@section Scripts {

    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div id="pageHeader" style="margin-top:20px; margin-bottom: 20px;">
    <h2>Ny Inköpslista</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-outline-dark" />
            </div>
        </form>
        <hr />
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark">Tillbaka till lista</a>
</div>

