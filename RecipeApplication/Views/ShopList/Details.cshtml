@model ShopListViewModel
@{
    ViewBag.Title = "Detaljer";
}

<div id="pageHeader" style="margin-top:20px; margin-bottom: 20px;">
    <a asp-action="Edit" asp-route-id="@Model.ShopListId" class="btn btn-outline-dark" style="margin-bottom:3px; margin-left: 5px;float:right;"><i class="fa fa-pencil"></i> Ändra</a>
    <h2>@Model.Name</h2>
</div>
<hr />

<h3>Recept</h3>


<div class="row">
    @foreach (var li in Model.ListItems)
    {

        <div class="col-6 col-md-3">
            <div class="border rounded" style="margin-top: 6px; margin-bottom: 4px; background-color: #212529">
                <a asp-controller="Recipe" asp-action="Details" asp-route-id="@li.RecipeId" style="text-decoration: none;">
                    <img src="~/img/@(li.Recipe.PictureId).jpg" class="img-fluid" alt="@li.Recipe.Name" style="margin-bottom:5px;" />
                </a>

                <h6 style="color:white; margin-left: 5px;">@li.Recipe.Name</h6>
                <form asp-controller="ShopList" asp-action="Details" asp-route-recipeId="@li.RecipeId" asp-route-shopListid="@li.ShopListId">
                    <input type="submit" value="Ta Bort" class="btn btn-dark" style="width: 100%; margin-top: 6px;" />
                </form>
            </div>

        </div>

    }
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-outline-dark">Tillbaka till lista</a>
</div>
