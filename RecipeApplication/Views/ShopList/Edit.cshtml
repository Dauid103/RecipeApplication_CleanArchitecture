@model ShopListViewModel

@{
    ViewBag.Title = "Edit";
}

@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div id="pageHeader" style="margin-top:20px; margin-bottom: 20px;">
    <h2>Ändra Inköpslista</h2>
</div>

<p>Pris: </p>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-dark" type="submit" value="Spara" />
            </div>
        </form>
        <hr />
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.ShopListId" class="btn btn-outline-dark">Tillbaka</a>
</div>
